{
  "name": "commitchain-platform",
  "version": "1.0.0",
  "description": "CommitChain - Decentralized commitment platform on Avalanche network",
  "main": "index.js",
  "scripts": {
    "dev:test": "concurrently \"npm run dev:contracts\" \"npm run dev:frontend\"",
    "dev:contracts": "cd contracts && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "cd contracts && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:frontend",
    "test:contracts": "cd contracts && npm test",
    "test:frontend": "cd frontend && npm test",
    "deploy:fuji": "cd contracts && npm run deploy:fuji",
    "deploy:mainnet": "cd contracts && npm run deploy:mainnet"
  },
  "keywords": [
    "avalanche",
    "web3",
    "solidity",
    "react",
    "commitment",
    "staking",
    "defi"
  ],
  "author": "CommitChain Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

